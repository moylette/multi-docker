{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "moylette/multi-client",
            "hostname": "client",
            "essential": false,
            "memory": 128
        },
        {
            "name": "server",
            "image": "moylette/multi-server",
            "hostname": "api",
            "essential": false,
            "memory": 128
        },
        {
            "name": "worker",
            "image": "moylette/multi-worker",
            "essential": false,
            "memory": 128
        },
        {
            "name": "nginx",
            "image":  "moylette/multi-nginx",
            "essential": true,
            "portMappings": [
                {
                  "hostPort": 80,
                  "containerPort": 80
                }
              ],
            "links": ["client", "server"],
            "memory": 256
        }
    ]
}